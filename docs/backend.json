{
  "entities": {
    "GDPRecord": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "GDPRecord",
      "type": "object",
      "description": "Represents a single GDP record for a specific year.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the GDP record."
        },
        "year": {
          "type": "number",
          "description": "The year for which the GDP value is recorded."
        },
        "value": {
          "type": "number",
          "description": "The GDP value for the given year, in US dollars."
        },
        "country": {
          "type": "string",
          "description": "The country for which the GDP is recorded"
        }
      },
      "required": [
        "id",
        "year",
        "value",
        "country"
      ]
    },
    "User": {
      "title": "User",
      "description": "Represents a user of the application.",
      "type": "object",
      "properties": {
        "uid": {
          "type": "string",
          "description": "The user's unique ID from Firebase Authentication."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        }
      },
      "required": [
        "uid",
        "email"
      ]
    }
  },
  "auth": {
    "providers": [
      "password",
      "anonymous"
    ]
  },
  "firestore": {
    "/gdp_records/{gdpRecordId}": {
      "schema": {
        "$ref": "#/entities/GDPRecord"
      },
      "description": "Stores GDP records."
    },
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/User"
      },
      "description": "Stores user profile information."
    }
  }
}
